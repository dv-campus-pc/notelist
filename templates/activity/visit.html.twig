{% extends 'base.html.twig' %}

{% block title %}Hello ActivityController!{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Created at</th>
            <th scope="col">User</th>
            <th scope="col">Url</th>
            <th scope="col">Method</th>
            <th scope="col">Ip</th>
            <th scope="col">Status code</th>
        </tr>
        </thead>
        <tbody>
            {% for activity in activities %}
            <tr>
                <td>{{ activity.createdAt|date("Y-m-d H:i:s", "Europe/Kiev") }}</td>
                <td>{{ activity.user ? activity.user.username : '-' }}</td>
                <td class="brake-word">{{ activity.url }}</td>
                <td>{{ activity.method }}</td>
                <td>{{ activity.ip }}</td>
                <td>{{ activity.statusCode }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ include('pagination.html.twig') }}
{% endblock %}
